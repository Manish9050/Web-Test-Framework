<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Smoke Suite" verbose="1" parallel="tests" thread-count="1">

    <listeners>
        <listener class-name="listeners.AnnotationTransformer" />
        <listener class-name="org.testng.reporters.TestHTMLReporter" />
    </listeners>

    <test name="Login Test" >
    <parameter name="deviceName" value="window" />    <!-- passing browser parameter to BaseClass ->Setup() -->
     <parameter name="browser" value="chrome" />    <!-- passing browser parameter to BaseClass ->Setup() -->
        <classes>
            <class name="testClasses.authentication.LoginTest"></class>
        </classes>
    </test>

</suite>

